{
  "name": "@limitless.claver/node-express-router",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/limitless-kode/stringify.git"
  },
  "version": "0.2.3",
  "description": "String helper method for all string and JSON manipulations",
  "main": "./dist/app.bundle.js",
  "files": [
    "./dist/app.bundle.js",
    "./types"
  ],
  "scripts": {
    "release": "release-it",
    "test": "jest --config jestconfig.json",
    "start": "webpack serve --config webpack.config.js",
    "build": "webpack",
    "serve": "webpack-dev-server --open --config webpack.config.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json"
  },
  "keywords": [],
  "author": {
    "name": "Peter Claver",
    "email": "limitless.claver@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "email": "limitless.claver@gmail.com",
    "url": "https://github.com/limitless-kode/stringify/issues"
  },
  "homepage": "https://github.com/limitless-kode/stringify#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "browserify-zlib": "^0.2.0",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "release-it": "^16.1.5",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@types/express": "^4.17.17",
    "express": "^4.18.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {}
          ]
        }
      }
    }
  }
}
